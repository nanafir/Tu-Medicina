<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <EditText
            android:id="@+id/et_datepicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:focusable="false"
            android:hint="dd_mm_yyyy"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/iv_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_calendar_et"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/et_datepicker"
            app:layout_constraintEnd_toEndOf="@+id/et_datepicker"
            app:layout_constraintTop_toTopOf="@+id/et_datepicker" />

</androidx.constraintlayout.widget.ConstraintLayout>